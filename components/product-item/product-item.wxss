/* components/product-item/product-item.wxss */
.component-container {
  position: relative;
  width: 100%;
  margin: 24rpx 0;
  border-radius: 12rpx;
  background-color: white;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.text-center {
  text-align: center;
}
.text-bold {
  font-weight: bold;
}
.text-bolder {
  font-weight: bolder;
}
.cls {
  clear: both;
}
.data-value-color {
  color: #FF7625;
}

.data-title-color {
  color: #9F9F9F;
}
.block {
  display: block;
}
.color-red {
  color: red;
}
.component-container .item-content {
  position: relative;
  width: 96%;
  margin: 0 auto;
}
.component-container .distributor-title {
  display: block;
  padding: 6rpx 0;
  font-size: 24rpx;
  color: #555555;
  font-weight: 400;
}

.component-container .icon {
  position: relative;
  width: 98%;
  margin: 0 auto;
}

.component-container .item-icon {
  display: block;
  width: 100%;
  margin: 0 auto;
}

.component-container .icon .detail-view {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, .3);
  border: 1px solid white;
  border-radius: 24rpx;
}

.component-container .detail-view .text {
  color: white;
  font-size: 24rpx;
  line-height: 24rpx;
  padding: 6rpx 12rpx;
}

.component-container .desc {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  height: 96rpx;
  padding: 18rpx 0;
}

.component-container .desc .title {
  font-size: 32rpx;
  font-weight: bolder;
  flex-grow: 2;
  padding-right: 24rpx;
}

.component-container .desc .spu-title {
  width: 100%;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.component-container .desc .data {
  flex-grow: 1;
  min-width: 120rpx;
}

.component-container .desc::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  left: 2%;
  width: 96%;
  height: 2rpx;
  background-color: #E9EAEB;
}

.component-container .desc .data {
  position: relative;
  display: inline-flex;
  flex-flow: column nowrap;
  align-items: center;
}

.component-container .desc .data::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: -12rpx;
  width: 4rpx;
  height: 68rpx;
  background-color: #F2F2F2;
}

.component-container .desc .data .data-title {
  font-size: 24rpx;
}
.component-container .sale-data-item {
  font-weight: 500;
  font-size: 28rpx;
}
.component-container .item-price {
  padding-top: 12rpx;
  color: red;
  display: flex;
  align-items: center;
  flex-flow: row nowrap;
  justify-content: flex-start;
}
.current-price {
  font-size: 48rpx;
}
.original-price {
  color: gray;
  text-decoration:line-through;
}
.original-price-box {
  padding-left: 12rpx;
}
.btn-wrapper {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.btn-wrapper .btn {
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  color: white;
  margin: 0 24rpx;
}
.btn-wrapper .btn-danger {
  background-color: red;
}
.btn-wrapper .btn-warning {
  background-color: #FD6226;
}

.btn-wrapper::before {
  content: '';
  position: absolute;
  bottom: -24rpx;
  left: 2%;
  width: 96%;
  height: 2rpx;
  background-color: #E9EAEB;
}
.buyer-wrapper {
  position: relative;
  padding-top: 36rpx;
}
.buyer-wrapper .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}
.buyer-wrapper .more {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  color: white;
  background-color: #8D8D8D;
}
.buyer-wrapper .text {
  font-size: 24rpx;
  color: #8D8D8D;
  padding: -24rpx 0 0 12rpx;
}