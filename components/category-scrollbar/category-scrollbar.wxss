/* components/category-scrollbar/category-scrollbar.wxss */
.swiper {
  height: 340rpx;
}

.swiper-item {
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: flex-start;
}

.category-item {
  position: relative;
  width: 120rpx; 
  height: 120rpx;
  margin: 16rpx 10rpx 16rpx 10rpx;
  display: inline-flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.category-item .icon image {
  max-width: 96rpx;
  max-height: 96rpx;
}

.category-item .title {
  font-size: 24rpx;
}

.swiper-dot-box {
  width: 100%;
  height: 48rpx; 
}
