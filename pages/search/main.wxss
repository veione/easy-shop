/* pages/category/main.wxss */
.searchbar-box {
  position: relative;
}
.searchbar::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 20rpx;
  width: 100%;
  height: 2rpx;
  background-color: #E6E6E6;
}
.text-history {
  font-size: 28rpx;
}
.history .content {
  padding: 20rpx 0 100rpx 0;
}
.history .content text {
  display: inline-block;
  max-width: 160rpx;
  color: #6F6F6F;
  background-color: #F2F2F2;
  padding: 12rpx;
  margin: 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.btn-box  {
  position: relative;
}
.btn-box .btn-icon {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 12rpx;
  border: 1px solid #E6E6E6;
  font-size: 24rpx;
  color: #6F6F6F;
  padding: 12rpx 0;
}

.btn-box .icon {
  margin-right: 12rpx;
  width: 24rpx;
  height: 24rpx;
}

.btn-box .btn-icon::after {
  border-radius: 12rpx;
  border: 0;
}