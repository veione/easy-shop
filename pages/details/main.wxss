/* pages/details/main.wxss */
@import '/css/font.wxss';
@import '/css/color.wxss';
@import '/css/pdmg.wxss';
@import '/css/global.wxss';
@import '/css/background.wxss';
@import '/assets/iconfont.wxss';
@import '/pages/template/template.wxss';

.container {
  background-color: #fff;
}

.tabbar-container {
  border-top: 1px solid #F3F2F6;
  border-bottom: 1px solid #F3F2F6;
}

.tabbar-container .title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.title-sel {
  color: #24272c;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-sel .line-style {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.title-sel-selected {
  color: #E70013;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-sel-selected .line-style {
  background: #E70013;
  height: 6rpx;
  width: 90rpx;
  position: relative;
  margin-top: 10rpx;
}

.swiper-item {
  width: 100%;
  flex: 1;
  overflow: scroll;
}

.swiper-component {
  height: 750rpx;
  width: 100%;
}

.banner {
  position: relative;
  width: 100%;
}

.banner .img {
  width: 100%;
  height: 100%
}

.indicator {
  position: absolute;
  right: 12rpx;
  bottom: 10rpx;
  display: flex;
  justify-content: flex-end;
  background-color: rgba(0, 0, 0, .3);
  border-radius: 12rpx;
  padding: 4rpx 12rpx;
}

.color-white {
  color: white;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 5rpx;
  width: 50rpx;
  height: 8rpx;
  background: #757575;
  border-radius: 8rpx;
  transition: all .6s;
}

.dots .dot.active {
  width: 50rpx;
  background: #fff;
}

.item-price-time {
  position: relative;
  height: 124rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column nowrap;
  color: white;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#FC5509), to(red));
}

.price-view {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.price-view .original-price {
  text-decoration: line-through;
  padding: 10px 0 0 10px;
}

.item-price-time .time {
  background-color: white;
  border-radius: 24rpx;
  padding: 6rpx 12rpx;
}

.item-content .desc {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  height: 128rpx;
  padding: 12rpx 24rpx;
}

.item-content .desc .title {
  font-size: 32rpx;
  font-weight: bolder;
  flex-grow: 2;
  padding-right: 24rpx;
}

.item-content .desc .spu-title {
  width: 100%;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-content .desc .data {
  flex-grow: 1;
  min-width: 120rpx;
}

.item-content .desc::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  left: 1%;
  width: 98%;
  height: 2rpx;
  background-color: #E9EAEB;
}

.item-content .desc .data {
  position: relative;
  display: inline-flex;
  flex-flow: column nowrap;
  align-items: center;
}

.item-content .desc .data::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: -12rpx;
  width: 4rpx;
  height: 68rpx;
  background-color: #F2F2F2;
}

.item-content .desc .data .data-title {
  font-size: 24rpx;
}

.sale-data-item {
  height: 32rpx;
}


.product-image .img {
  width: 100%;
  min-height: fit-content;
}

.title-item::before {
  content: "";
  position: absolute;
  top: -36rpx;
  left: 0;
  height: 18rpx;
  width: 100%;
  background-color: #E9EDF1;
}

.title-item {
  position: relative;
  height: 48rpx;
  line-height: 48rpx;
  margin: 58rpx auto;
  text-align: center;
}

.title-item .line {
  display: block;
  height: 2rpx;
  background: #F4F4F5;
  position: absolute;
  top: 0.9rem;
  width: 90%;
  left: 5%;
}

.title-item .title {
  display: inline-block;
  background: rgba(255, 255, 255, 1);
  padding: 0 48rpx;
  text-align: center;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

.product-details {
  border-radius: 8rpx;
  border: 2rpx solid #E6E6E6;
}

.product-details .item {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-items: center;
  border-bottom: 2rpx solid #E6E6E6;
}

.product-details .content {
  width: 100%;
  padding: 24rpx;
}

.product-details .content:first-child {
  border-right: 2rpx solid #E6E6E6;
}

.product-details .content:last-child {
  border-right: none;
}

.product-details .item:last-child {
  border-bottom: none;
}

.footer {
  z-index: 1;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  color: #000;
  text-align: center;
  display: flex;
  flex-flow: row nowrap;
  background-color: white;
}

.footer .btn-group {
  display: flex;
  flex-flow: row nowrap;
}

.footer .btn-group:nth-child(1) {
  flex-grow: 1;
  min-width: 280rpx;
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #E1E4E8;
}

.footer .btn-group:nth-child(2) {
  flex-grow: 2;
}

.footer .btn-group .btn {
  width: 100%;
  margin: 0;
  padding: 24rpx 0;
  border-radius: 0;
}

.footer .btn-group .btn-icon {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.footer .btn-group .icon {
  font-size: 48rpx;
  padding-bottom: 12rpx;
}

.footer .btn-group .text {
  font-size: 24rpx;
  line-height: 24rpx;
}

.buyer-items {
  position: relative;
  margin-top: 24rpx;
}

.buyer-items .title {
  padding: 24rpx;
  font-size: 28rpx;
  background-color: #FBF6F6;
}

.buyer-items .items .item {
  margin: 24rpx 0;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}

.buyer-items .items .user-info {
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.buyer-items .items .user-info .wrapper {
  padding-left: 24rpx;
  display: inline-flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: center;
  font-size: 24rpx;
}

.buyer-items .items .icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.buyer-items .items .name {
  color: #A1A1A1;
  margin-bottom: 14rpx;
}

.buyer-items .btn {
  margin-top: 48rpx;
  min-width: 360rpx;
  color: red;
  font-weight: normal;
  font-size: 24rpx;
  border: 1rpx solid red;
  background-color: white;
  border-radius: 120rpx;
  padding: inherit 24rpx;
}