.swiper-component {
  height: 750rpx;
  width: 100%;
}

.banner {
  position: relative;
  width: 100%;
}

.banner .img {
  width: 100%;
  height: 100%
}

.imageCount {
  width: 120rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 40rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  left: 13px;
  bottom: 20rpx;
}

.indicator {
  position: absolute;
  right: 12rpx;
  bottom: 10rpx;
  display: flex;
  justify-content: flex-end;
  background-color: rgba(0, 0, 0, .3);
  border-radius: 12rpx;
  padding: 4rpx 12rpx;
}

.color-white {
  color: white;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 5rpx;
  width: 50rpx;
  height: 8rpx;
  background: #757575;
  border-radius: 8rpx;
  transition: all .6s;
}

.dots .dot.active {
  width: 50rpx;
  background: #fff;
}

.item-price-time {
  position: relative;
  height: 124rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column nowrap;
  color: white;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#FC5509), to(red));
}

.price-view {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.price-view .original-price {
  text-decoration: line-through;
  padding: 10px 0 0 10px;
}

.item-price-time .time {
  background-color: white;
  border-radius: 24rpx;
  padding: 6rpx 12rpx;
}

.item-content .desc {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  height: 128rpx;
  padding: 12rpx 24rpx;
}

.item-content .desc .title {
  font-size: 32rpx;
  font-weight: bolder;
  flex-grow: 2;
  padding-right: 24rpx;
}

.item-content .desc .spu-title {
  width: 100%;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-content .desc .data {
  flex-grow: 1;
  min-width: 120rpx;
}

.item-content .desc::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  left: 1%;
  width: 98%;
  height: 2rpx;
  background-color: #E9EAEB;
}

.item-content .desc .data {
  position: relative;
  display: inline-flex;
  flex-flow: column nowrap;
  align-items: center;
}

.item-content .desc .data::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: -12rpx;
  width: 4rpx;
  height: 68rpx;
  background-color: #F2F2F2;
}

.item-content .desc .data .data-title {
  font-size: 24rpx;
}


.product-image .img {
  width: 100%;
  min-height: fit-content;
}

.title-item::before {
  content: "";
  position: absolute;
  top: -36rpx;
  left: 0;
  height: 18rpx;
  width: 100%;
  background-color: #E9EDF1;
}

.title-item {
  position: relative;
  height: 48rpx;
  line-height: 48rpx;
  margin: 58rpx auto;
  text-align: center;
}

.title-item .line {
  display: block;
  height: 2rpx;
  background: #F4F4F5;
  position: absolute;
  top: 0.9rem;
  width: 90%;
  left: 5%;
}

.title-item .title {
  display: inline-block;
  background: rgba(255, 255, 255, 1);
  padding: 0 48rpx;
  text-align: center;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

.supplier-item {
  margin-bottom: 48rpx;
}

.table {
  border: 2rpx solid #E9EAEB;
  font-size: 36rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: flex-start;
  height: 2rem;
  align-items: center;
  border-bottom: 2rpx solid #E9EAEB;
}

.tr:nth-last-child(0)::after {
  content: '';
  border: none;
}

.td {
  width: 50%;
  justify-content: flex-start;
  text-align: left;
  padding-left: 12rpx;
  font-size: 32rpx;
  border-right: 2rpx solid #E9EAEB;
}

.td::after {
  content: '';
  border: none;
}

.steps {
  width: 360px;
  margin: 0 auto;
}

.steps .item {
  position: relative;
  padding: 0 0 20px 16px;
  list-style: none;
  border-left: 2px solid #ccc;
}

.steps .item:before {
  content: "";
  display: block;
  position: absolute;
  margin-left: -8px;
  top: 0;
  left: 0px;
  width: 12px;
  height: 12px;
  line-height: 12px;
  text-align: center;
  color: #fff;
  font-size: 14px;
  background-color: white;
  border: 1px solid red;
  border-radius: 50%;
}

.steps .title {
  font-size: 16px;
  line-height: 24px;
}

.steps .desc {
  font-size: 14px;
  color: #999999;
}

.footer {
  z-index: 1;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  color: #000;
  text-align: center;
  display: flex;
  flex-flow: row nowrap;
  background-color: white;
}

.footer .btn-group {
  display: flex;
  flex-flow: row nowrap;
}

.footer .btn-group:nth-child(1) {
  flex-grow: 1;
  min-width: 280rpx;
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #E1E4E8;
}

.footer .btn-group:nth-child(2) {
  flex-grow: 2;
}

.footer .btn-group .btn {
  width: 100%;
  margin: 0;
  padding: 24rpx 0;
  border-radius: 0;
}

.footer .btn-group .btn-icon {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.footer .btn-group .icon {
  width: 48rpx;
  height: 48rpx;
  padding-bottom: 12rpx;
}

.footer .btn-group .text {
  font-size: 24rpx;
  line-height: 24rpx;
}

.buyer-items {
  position: relative;
  margin-top: 24rpx;
}

.buyer-items .title {
  padding: 24rpx;
  font-size: 28rpx;
  background-color: #FBF6F6;
}

.buyer-items .items .item {
  margin: 24rpx 0;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}

.buyer-items .items .user-info {
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.buyer-items .items .user-info .wrapper {
  padding-left: 24rpx;
  display: inline-flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: center;
  font-size: 24rpx;
}

.buyer-items .items .icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.buyer-items .items .name {
  color: #A1A1A1;
  margin-bottom: 14rpx;
}

.buyer-items .btn {
  margin-top: 48rpx;
  min-width: 360rpx;
  color: red;
  font-weight: normal;
  font-size: 24rpx;
  border: 1rpx solid red;
  background-color: white;
  border-radius: 120rpx;
  padding: inherit 24rpx;
}