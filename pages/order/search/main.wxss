/* pages/order/search/main.wxss */
@import '/css/global.wxss';
@import '/css/background.wxss';
@import '/css/color.wxss';
@import '/css/font.wxss';
@import '/css/pdmg.wxss';
@import '/assets/iconfont.wxss';
@import '/pages/template/template.wxss';

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #EEF2F5;
}

.navbar {
  width: 100%;
  z-index: 999;
}

.navbar::after {
  content: '';
  display: block;
}

.searchbar {
  width: 100%;
  margin: 16rpx auto;
  background-color: #EEF2F5;
}

.searchbar .item {
  width: 94%;
  margin: 0 auto;
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: start;
  align-items: center;
}

.searchbar .item .btn-query {
  text-align: center;
  min-width: 60rpx;
  font-size: 30rpx;
  padding: 24rpx 12rpx;
}

.searchbar .wrapper {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: start;
  align-items: center;
  border-radius: 48rpx;
  padding: 12rpx;
  background-color: white;
}

.searchbar .wrapper .input-field {
  width: 100%;
  padding: 6rpx;
  font-size: 28rpx;
}

.history .title {
  font-size: 32rpx;
  font-weight: bold;
}

.history .items {
  padding: 20rpx 0 100rpx 0;
}

.history .items .item {
  display: inline-block;
  max-width: 160rpx;
  color: #6F6F6F;
  padding: 12rpx;
  margin: 12rpx 12rpx 12rpx 0;
  border-radius: 6rpx;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  border: 2rpx solid #CACED6;
}

.history .btn-box {
  position: relative;
}

.history .btn-box .btn-icon {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  border: 1px solid #E6E6E6;
  font-size: 24rpx;
  color: #6F6F6F;
  padding: 12rpx 0;
}

.history .btn-box .icon {
  margin-right: 12rpx;
  width: 24rpx;
  height: 24rpx;
}

.history .btn-box .btn-icon::after {
  border-radius: 12rpx;
  border: 0;
}