/* pages/cart/main.wxss */
@import '/css/global.wxss';
@import '/css/background.wxss';
@import '/css/pdmg.wxss';
@import '/css/color.wxss';
@import '/css/font.wxss';
@import '/assets/iconfont.wxss';

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #E9EDF1;
}

.navbar,
.titlebar {
  width: 100%;
  z-index: 999;
  position: relative;
}

.titlebar {
  position: relative;
  padding: 6rpx 0 18rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.titlebar .title {
  display: inline-block;
  white-space: nowrap;
  width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.titlebar .btn-group {
  position: absolute;
  top: 50%;
  right: 2%;
  transform: translateY(-50%);
}

.items {
  position: relative;
}

.items .item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 258rpx;
  border-radius: 12rpx;
  background-color: white;
}

.items .item .icon {
  width: 200rpx;
  height: 200rpx;
}

.items .item .item-check {
  min-width: 8%;
}

.items .item .item-cover {
  min-width: 32%;
}

.items .item .item-info {
  max-width: 60%;
  margin-top: -36rpx;
}

.items .item .item-info .bottom {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.items .item .item-info .bottom .btn-group {
  position: relative;
  padding-top: 24rpx;
}

.btn-group .btn-plus,
.btn-group .btn-minus {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 28rpx;
  font-weight: bolder;
  margin: 24rpx 24rpx 0 24rpx;
}

.btn-group .btn-plus {
  color: white;
  background-color: red;
}

.btn-group .btn-minus {
  color: red;
  border: 1px solid #ccc;
  background-color: white;
}


.item .item-info .title {
  display: inline-block;
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 设置圆角*/
checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
}

/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: red;
  border-color: red;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}


.checkout-items {
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12rpx;
}
.checkout-items .item-check-all {
  flex-grow: 1;
}

.checkout-items .checkout-info {
  flex-grow: 2;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-left: auto;
}

.btn-checkout {
  width: 240rpx;
  margin-left: 12rpx;
  text-align: center;
  color: white;
  padding: 36rpx 0;
}